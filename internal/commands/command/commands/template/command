package {{commandName}}

import (
	"github.com/gandarfh/maid-san/internal/commands/{{dir}}/commands"
	"github.com/gandarfh/maid-san/internal/commands/{{dir}}/repository"
	"github.com/gandarfh/maid-san/pkg/repl"
)

type {{commandName}} struct {
	workspace repository.{{commandName}}
	wks       *[]repository.{{commandName}}
}

func (w *{{commandName}}) Read(args ...string) error {
	return nil
}

func (w *{{commandName}}) Eval() error {
	return nil
}

func (w *{{commandName}}) Print() error {
	return nil
}

func (w *{{commandName}}) Run(args ...string) error {
	if err := w.Read(args...); err != nil {
		return err
	}

	if err := w.Eval(); err != nil {
		return err
	}

	if err := w.Print(); err != nil {
		return err
	}

	return nil
}

func Init() repl.Repl {
	return &{{commandName}}{}
}

func SubCommands() repl.SubCommands {
	return repl.SubCommands{
		{Key: "create", Repl: commands.CreateInit()},
		{Key: "list", Repl: commands.ListInit()},
	}
}
